<Window x:Class="PL.Simulator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Simulator" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Content="Old status" Grid.Row="0"></Label>
        <Label x:Name="oldStatus" Content="{Binding Path=t[3]}" Grid.Column="0" Grid.Row="0" Margin="74,10,200,164"/>
        <Label Content="Begin of treatment" Grid.Row="1"></Label>
        <Label x:Name="BeginOfTreatment" Content="{Binding Path=t[3]}" Grid.Column="0" Grid.Row="1" Margin="74,10,200,164"/>
        <Label Content="New Status" Grid.Row="2"></Label>
        <Label x:Name="NewStatus" Content="{Binding Path=t[3]}" Grid.Column="0" Grid.Row="2" Margin="74,10,200,164"/>


    </Grid>
</Window>
