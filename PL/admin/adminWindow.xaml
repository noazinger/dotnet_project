<Window x:Class="PL.admin.adminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.admin"
        mc:Ignorable="d"
        Title="adminWindow" Height="640" Width="800">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="UpGrid" Height="auto" Grid.Row="0" Width="auto" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

        </Grid>
        <!--<Grid></Grid>-->
        <ListView Grid.Column="0" x:Name="OrdersListview" MouseDoubleClick="ordersClicked" FontFamily="Amatic SC" FontSize="16" Cursor="Hand" SelectionChanged="OrdersListview_SelectionChanged" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Employee Information">
                    <GridViewColumn DisplayMemberBinding="{Binding Path=ID}" Header="ID" Width="30"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=CustomerName}" Header="customerName" Width="120"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Status}" Header="Status" Width="70"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=AmountOfItems}" Header="Amount" Width="90"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=TotalPrice}" Header="TotalPrice" Width="80"/>
                </GridView>
            </ListView.View>
        </ListView>

        <ListView Grid.Column="2" x:Name="ProductsListview" MouseDoubleClick="itemsClicked" FontFamily="Amatic SC" FontSize="16" Cursor="Hand" SelectionChanged="ProductsListview_SelectionChanged" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Employee Information">
                    <GridViewColumn DisplayMemberBinding="{Binding Path=ID}" Header="ID" TextBlock.TextAlignment="Center" Width="30"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Header="Name" TextBlock.TextAlignment="Center" Width="80"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=catagory}" Header="Category" ></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Price}" Header="Price" ></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="addProBtn" Content="Add new product" HorizontalAlignment="Left" Margin="60,553,0,0" VerticalAlignment="Top" Click="addProBtn_Click" FontFamily="Amatic SC" FontSize="16" Background="Red" Height="33" Width="222" Grid.Column="2"/>

    </Grid>

</Window>
