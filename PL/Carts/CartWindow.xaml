<Window x:Class="PL.Carts.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Carts"
        mc:Ignorable="d"
        Title="CartWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="90*"/>

        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="30*"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="30*"/>

            </Grid.ColumnDefinitions>
            <Label Content="your details" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" Height="26" Width="221"/>
            <TextBox x:Name="CustomerName" Grid.Column="1" Grid.Row="1"></TextBox>
            <Label Content="Customer Name" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="221"/>
            <TextBox Name="CustomerAddress" Grid.Column="1" Grid.Row="2"></TextBox>
            <Label Content="Customer Address" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="2" VerticalAlignment="Top" Height="26" Width="221"/>
            <TextBox Name="CustomerEmail" Grid.Column="1" Grid.Row="3"></TextBox>
            <Label Content="Customer Email" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="3" VerticalAlignment="Top" Height="26" Width="221"/>

            <Button Grid.ColumnSpan="3"  Grid.Row="4" Click="Button_Click" >complete order</Button>
            <TextBox x:Name="total_price" Text="{Binding Path=TotalPrice}" HorizontalAlignment="Center" Margin="0,43,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="100" Grid.Column="1" Height="34"/>
            <Label Content="Total Price: " HorizontalAlignment="Center" Margin="0,43,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.513,0.05"/>

        </Grid>

        <ListView x:Name="OrderItemView"   Grid.Column="1" Margin="0,0,0,42" ItemsSource="{Binding}" > 
            <ListView.View>
                <GridView>
                    <GridViewColumn x:Name="gvcName" DisplayMemberBinding="{Binding Path=Name}" Header="Name" Width="150"/>
                    <GridViewColumn x:Name="gvcPrice" DisplayMemberBinding="{Binding Path=Price}" Header="Price" Width="150"/>
                    <GridViewColumn x:Name="gvcAmount" DisplayMemberBinding="{Binding Path=Amount}" Header="Amount" Width="150"/>
                    <GridViewColumn x:Name="gvcInStock" DisplayMemberBinding="{Binding Path=TotalPrice}" Header="TotalPrice" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>


    </Grid>
</Window>
